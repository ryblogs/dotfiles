// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      // Focus back to the editor from the terminal
      "shift-enter": "terminal_panel::ToggleFocus",
    },
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      /*
       * IPYTHON WORKFLOW:
       * Copies selected text, toggles terminal, pastes, executes,
       * and jumps back to the editor.
       */
      "shift-enter": [
        "workspace::SendKeystrokes",
        "cmd-c ctrl-` cmd-v enter enter shift-enter",
      ],
    },
  },
]
